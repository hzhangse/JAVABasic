<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns="http://japan.org/book/audlt" xmlns:xsd="http://www.w3.org/2001/XMLSchema"

	targetNamespace="http://japan.org/book/audlt" elementFormDefault="qualified"
	attributeFormDefault="unqualified" >

<xsd:element name="age" type="xsd:string" />


<xsd:attribute name="color">
	<xsd:simpleType>
		<xsd:restriction base="xsd:string">
			<xsd:pattern value="red|blue|yellow" />
		</xsd:restriction>
	</xsd:simpleType>
</xsd:attribute>
</xsd:schema>